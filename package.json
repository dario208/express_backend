{
    "name": "backend-educatif",
    "version": "1.0.0",
    "description": "Backend Express.js (TypeScript) pour une application mobile Ã©ducative",
    "main": "dist/index.js",
    "scripts": {
      "build": "tsc",
      "start": "node dist/index.js",
      "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
      "lint": "eslint . --ext .ts",
      "db:migrate": "drizzle-kit migrate:dev",
      "db:generate": "drizzle-kit generate:ts",
      "seed:roles": "ts-node -r tsconfig-paths/register seeds/seed-roles.ts",
      "seed:modules": "ts-node -r tsconfig-paths/register seeds/seed-modules.ts",
      "seed:users": "ts-node -r tsconfig-paths/register seeds/seed-users.ts"
    },
    "dependencies": {
      "@drizzle-orm/postgres-js": "^0.25.0",
      "@drizzle-orm/core": "^0.25.0",
      "bcrypt": "^5.1.0",
      "body-parser": "^1.20.0",
      "cors": "^2.8.5",
      "dotenv": "^16.0.3",
      "express": "^4.18.2",
      "express-async-errors": "^3.1.1",
      "jsonwebtoken": "^9.0.0",
      "pg": "^8.11.0",
      "swagger-jsdoc": "^6.2.8",
      "swagger-ui-express": "^4.6.3",
      "temporalio": "^1.17.0"
    },
    "devDependencies": {
      "@types/bcrypt": "^5.0.0",
      "@types/body-parser": "^1.19.2",
      "@types/express": "^4.17.17",
      "@types/jsonwebtoken": "^9.0.2",
      "@types/node": "^20.2.0",
      "@typescript-eslint/eslint-plugin": "^6.9.0",
      "@typescript-eslint/parser": "^6.9.0",
      "eslint": "^8.45.0",
      "eslint-config-prettier": "^9.0.0",
      "eslint-plugin-import": "^2.30.1",
      "prettier": "^3.2.2",
      "ts-node": "^10.9.1",
      "ts-node-dev": "^2.0.0",
      "typescript": "^5.1.6"
    }
  }
  